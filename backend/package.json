{
  "name": "serverless-backend-aws",
  "version": "1.0.0",
  "description": "Serverless backend with Node.js, TypeScript, Terraform, and AWS services",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "start:dev": "npm run start\" ",
    "test": "jest",
    "serverless-dev": "npx serverless offline",
    "serverless-deploy": "serverless deploy",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "package:lambda": "zip -r lambda-deployment.zip dist/ node_modules/",
    "clean": "rm -rf dist/ coverage/ lambda-deployment.zip"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.462.0",
    "@aws-sdk/client-dynamodb": "^3.462.0",
    "@aws-sdk/client-s3": "^3.462.0",
    "@aws-sdk/lib-dynamodb": "^3.462.0",
    "@aws-sdk/s3-request-presigner": "^3.846.0",
    "@aws-sdk/util-dynamodb": "^3.462.0",
    "@serverless/typescript": "^4.17.1",
    "@speechmatics/batch-client": "^5.1.0",
    "@speechmatics/real-time-client": "^7.0.2",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1692.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "install": "^0.13.0",
    "joi": "^17.11.0",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.150",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.8",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "aws-sdk-client-mock": "^3.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "serverless": "^4.17.1",
    "serverless-esbuild": "^1.55.1",
    "serverless-offline": "^14.4.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
